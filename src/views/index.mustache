<!doctype html>
<html lang="pt-BR">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/stylesheets/style.css">
  <link rel="stylesheet" href="/stylesheets/index.css">
  <title>CMS</title>
</head>
<body>
  <h1>PÁGINA INICIAL</h1>

  {{#success}}
    <p class="success">Login realizado com sucesso!</p>
  {{/success}}

  <div class="options-container">
    {{#login}}
      <a class="options" href="/logout">Sair</a>
    {{/login}}

    {{^login}}
      <a class="options" href="/login">Entrar</a>
    {{/login}}

    <a class="options" href="/arquivos/novo">Criar Postagem</a>
    <a class="options" href="/arquivos">Postagens Disponíveis</a>
  </div>

  <h2>POSTAGENS</h2>
  <div>
    <label for="ordenar">Ordenar por:</label>
    <select id="ordenar" onchange="sortPosts()">
      <option value="padrao" {{#ordPadrao}}selected{{/ordPadrao}}>Padrão</option>
      <option value="data" {{#ordData}}selected{{/ordData}}>Data</option>
      <option value="titulo" {{#ordTitulo}}selected{{/ordTitulo}}>Título</option>
    </select>
  </div>
  <ul>
    {{#previews}}
      <li>
        <h2>{{titulo}}</h2>
        <a class="ver-completa-button" href="/arquivos/{{titulo}}.html">Ver completa</a>
        <p class="preview">{{{preview}}}</p>
      </li>
    {{/previews}}
  </ul>

  <script>
      function sortPosts() {
        const sort = document.getElementById('ordenar').value;
        document.cookie = 'ordenar' + "=" + sort;  
        window.location.href = `/`;
      }
    </script>
</body>
</html>
